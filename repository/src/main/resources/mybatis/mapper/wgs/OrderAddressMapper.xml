<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wgs.mapper.OrderAddressMapper">

<resultMap id="OrderAddressMap" type="com.wgs.entity.OrderAddress">

		<id column="id" jdbcType="INTEGER" property="id" />
		<result column="order_id" property="orderId" />
		<result column="order_sn" property="orderSn" />
		<result column="member_id" property="memberId" />
		<result column="address" property="address" />
		<result column="contact" property="contact" />
		<result column="phone" property="phone" />
    </resultMap>
	
	<!--表名 -->
	<sql id="tableName">
		wgs_order_address
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		id,
		order_id,
		order_sn,
		member_id,
		address,
		contact,
		phone
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{id, jdbcType=INTEGER},
		#{orderId, jdbcType=INTEGER},
		#{orderSn, jdbcType=VARCHAR},
		#{memberId, jdbcType=INTEGER},
		#{address, jdbcType=VARCHAR},
		#{contact, jdbcType=VARCHAR},
		#{phone, jdbcType=VARCHAR}
	</sql>

	<!-- 查询全部记录 -->
    <select id="findAll" resultMap="OrderAddressMap">
        SELECT
        	<include refid="Field"></include>
        FROM
        	<include refid="tableName"></include>
		WHERE
			deleted = 0
    </select>
	
	<!-- 新增-->
<insert id="insert" parameterType="com.wgs.entity.OrderAddress" useGeneratedKeys="true" keyProperty="id">

        INSERT INTO
			<include refid="tableName"></include>
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">
				id,
            </if>
            <if test="orderId != null">
				order_id,
            </if>
            <if test="orderSn != null">
				order_sn,
            </if>
            <if test="memberId != null">
				member_id,
            </if>
            <if test="address != null">
				address,
            </if>
            <if test="contact != null">
				contact,
            </if>
            <if test="phone != null">
				phone,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">
				#{id},
            </if>
            <if test="orderId != null">
				#{orderId},
            </if>
            <if test="orderSn != null">
				#{orderSn},
            </if>
            <if test="memberId != null">
				#{memberId},
            </if>
            <if test="address != null">
				#{address},
            </if>
            <if test="contact != null">
				#{contact},
            </if>
            <if test="phone != null">
				#{phone},
            </if>
        </trim>
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="java.lang.Integer">
		UPDATE
			<include refid="tableName"></include>
		SET
			deleted = 1
		WHERE
			id = #{id}
	</delete>

    <!-- 批量删除 -->
    <delete id="deleteByIds">
        UPDATE
        	<include refid="tableName"></include>
		SET
			deleted = 1
        WHERE
			id IN
			<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
				#{item}
			</foreach>
    </delete>
	
	<!-- 更新记录 -->
<update id="update" parameterType="com.wgs.entity.OrderAddress">
		UPDATE
			<include refid="tableName"></include>
        <set>
			<if test="orderId != null">
				order_id = #{orderId},
			</if>
			<if test="orderSn != null">
				order_sn = #{orderSn},
			</if>
			<if test="memberId != null">
				member_id = #{memberId},
			</if>
			<if test="address != null">
				address = #{address},
			</if>
			<if test="contact != null">
				contact = #{contact},
			</if>
			<if test="phone != null">
				phone = #{phone},
			</if>
        </set>
        WHERE id = #{id}
	</update>
	
	<!-- 通过编号查询 -->
	<select id="findById" parameterType="java.lang.Integer" resultMap="OrderAddressMap">
		SELECT
			<include refid="Field"></include>
		FROM
			<include refid="tableName"></include>
		WHERE id = #{id}
	</select>

</mapper>